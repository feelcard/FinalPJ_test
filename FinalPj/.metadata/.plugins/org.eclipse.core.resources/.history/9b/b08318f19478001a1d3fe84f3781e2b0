var chartcount = 0;
var config={};
var chartData = {};
var chartOptions ={};
function getData() {
	var result = '';
	result += '<section id="chartjs-bar-charts">';
	result += '<div class="row">';
	result += '<div class="col-xs-12">';
	result += '<div class="card">';
	result += '<div class="card-header">';
	result += '<h4 class="card-title">Bar Chart</h4>';
	result += '<a class="heading-elements-toggle"><i';
	result += 'class="icon-ellipsis font-medium-3"></i></a>';
	result += '<div class="heading-elements">';
	result += '</div>';
	result += '</div>';
	result += '<div class="card-body collapse in">';
	result += '<div class="card-block">';
	result += '<canvas id="bar-chart'+chartcount+'" height="400"></canvas>';
	result += '</div>';
	result += '</div>';
	result += '</div>';
	result += '</div>';
	result += '</div>';
	result += '</section>';

	$('#chartBody').append(result);

	var ctx = $("#bar-chart"+chartcount);
	function chartconfig(data){
		chartOptions = {

				elements : {
					rectangle : {
						borderWidth : 2,
						borderColor : 'rgb(0, 255, 0)',
						borderSkipped : 'left'
					}
				},
				responsive : true,
				maintainAspectRatio : false,
				responsiveAnimationDuration : 500,
				legend : {
					position : 'top',
				},
				scales : {
					xAxes : [ {
						display : true,
						gridLines : {
							color : "#f3f3f3",
							drawTicks : false,
						},
						scaleLabel : {
							display : true,
						}
					} ],
					yAxes : [ {
						display : true,
						gridLines : {
							color : "#f3f3f3",
							drawTicks : false,
						},
						scaleLabel : {
							display : true,
						}
					} ]
				},
				title : {
					display : false,
					text : 'Chart.js Horizontal Bar Chart'
				}
			};
				chartData = {
						labels : [ "January", "February", "March", "April" ],
						datasets : [ {
							label : "My First dataset",
							data : [ 65, 59, 80, 81 ],
							backgroundColor : "#673AB7",
							hoverBackgroundColor : "rgba(103,58,183,.9)",
							borderColor : "transparent"
						}, {
							label : "My Second dataset",
							data : [ 28, 48, 40, 19 ],
							backgroundColor : "#E91E63",
							hoverBackgroundColor : "rgba(233,30,99,.9)",
							borderColor : "transparent"
						} ]
					};
				
				 config = {
							type : 'horizontalBar',

							// Chart Options
							options : chartOptions,

							data : chartData
						};

	}
	
	function getData() {
		$.ajax({
			url : 'hadoopgetdata',
			dataType : "json",
			success : function(data) {
				chartconfig(data);
			},
			error : function() {
				alert("fail");
			}
		})
	};

	$(document).ready(function() {
		getData();
	});


	
	// Create the chart
	var lineChart = new Chart(ctx, config);
	console.log('ctx: '+JSON.stringify(ctx));
	chartcount++;
}
